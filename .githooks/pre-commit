#!/bin/sh
# Pre-commit hook to run basic checks

set -e

echo "Running pre-commit checks..."

# Check formatting
echo "Checking code formatting..."
if ! gofmt -l . | grep -q .; then
    echo "Code is not formatted. Run 'make fmt' to fix."
    exit 1
fi

# Run go vet
echo "Running go vet..."
go vet ./...

# Run tests
echo "Running tests..."
go test ./pkg/...

echo "Pre-commit checks passed!"

